<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="setsTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:background">@drawable/round_border_text</item>

    </style>
    <style name="playersNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>

    </style>
    <style name="scoreBoardHeadingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="setsGamesAndPointsLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="setsGamesPointsTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:background">@drawable/round_border_text</item>

    </style>
    <style name="scoreButtonPlusStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:text">@string/plus</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="startBreakButtonStyle">

        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:background">@drawable/round_button2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
    </style>
    <style name="doubleFaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:text">@string/double_fault</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">12sp</item>
    </style>

    <string name="double_fault">Double Fault</string>
</resources>
